<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_12dp"

        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/rlayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_8dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25">

                            <TextView
                                android:id="@+id/text_view_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/robotomono_regular"
                                android:gravity="center_vertical"
                                android:lines="2"
                                android:text=""
                                android:textColor="@color/labelrecyclerview"
                                android:textSize="@dimen/font_14sp" />

                            <TextView
                                android:id="@+id/text_view_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:gravity="center_vertical"
                                android:lines="5"
                                android:text="karthick"
                                android:textColor="@color/newtheme_2"
                                android:textSize="@dimen/font_16sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/dmsans_regular" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/text_view_application_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.30"
                            android:gravity="center_vertical"
                            android:lines="5"
                            android:text="1234567890"

                            android:textColor="@color/labelrecyclerview"
                            android:textSize="@dimen/font_14sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:fontFamily="@font/dmsans_regular" />

                        <ImageView
                            android:id="@+id/call"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_weight="0.35"

                            android:src="@drawable/telephone_call" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rv_layout"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlayout"
                    android:layout_marginTop="5dp"
                    android:background="@color/recolor"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:weightSum="0.9">

                        <TextView
                            android:id="@+id/text_view_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:text="License Number"
                            android:textAllCaps="true"
                            android:textColor="@color/schemelabel"
                            android:textSize="12sp"
                            app:fontFamily="@font/dmsans_medium" />

                        <TextView
                            android:id="@+id/text_view_target_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:gravity="start"
                            android:text="Expiry Date"
                            android:textAllCaps="true"
                            android:textColor="@color/schemelabel"
                            android:textSize="12sp"
                            app:fontFamily="@font/dmsans_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="visible"

                        android:weightSum="1">

                        <TextView
                            android:id="@+id/text_view_till_licensename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:maxLines="4"
                            android:paddingStart="10dp"
                            android:text=""
                            android:textColor="@color/textColor"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/dmsans_regular" />

                        <TextView
                            android:id="@+id/text_view_expiry_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:gravity="start"
                            android:maxLines="4"
                            android:paddingStart="10dp"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/textColor"
                            android:textSize="16sp"
                            app:fontFamily="@font/dmsans_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:gravity="end"
                            android:maxLines="4"
                            android:paddingStart="10dp"
                            android:paddingEnd="20dp"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/textColor"

                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/dmsans_bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:gravity="start"
                            android:maxLines="4"
                            android:paddingStart="10dp"
                            android:paddingEnd="20dp"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/labelrecyclerview"
                            android:textSize="16sp"
                            app:fontFamily="@font/dmsans_bold" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/text_view_no_record_found2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="No Records Found"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>